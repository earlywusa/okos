<%= render 'shared/errors', obj: @kitOrder %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@kitOrder, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label "Practitioner"  %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :prac_id, class: "form-control", placeholder: "practitioner ID", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :comment %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :comment, rows: 10, class: "form-control", placeholder: "comment of order" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg'%>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel request and Back to order list", kit_orders_path %>]
    </div>
  </div>
</div>
